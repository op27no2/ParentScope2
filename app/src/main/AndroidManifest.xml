<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="op27no2.parentscope">



    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="com.android.vending.INTERNET" />


    <application
        android:name="MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="69bbc80edd2812e56eeb7ffce309a4a3c7468d50"
            />
        <activity android:name=".NavActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecordActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            >
        </activity>
        <activity
            android:name=".VideoActivity"
            >
        </activity>

        <activity
            android:name=".MonitoredActivity"
            >
        </activity>
        <activity
            android:name=".PasswordActivity"
            >
        </activity>

        <activity
            android:name=".AcquireScreenshotPermissionIntent"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            >

        </activity>
        <activity
            android:name=".BriefActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            >

        </activity>
        <activity android:name=".DeviceListActivity"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Dialog"
            android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".BluetoothChat"
            android:label="btchat"

            />

        <service
            android:name=".MyService"
            android:enabled="true"
            android:stopWithTask="false"
            android:exported="true"></service>

        <receiver
            android:name=".RestarterBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped">
            <intent-filter>
                <action android:name="com.parentscope.ReceiverDem" />
            </intent-filter>
        </receiver>
        <receiver android:name=".BootBroadcastReceiver" android:enabled="true" android:exported="true" >
            <intent-filter>
                    <category android:name="android.intent.category.DEFAULT"/>
                    <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
                    <action android:name="android.intent.action.BOOT_COMPLETED"/>
                    <action android:name="android.intent.action.USER_PRESENT"/>
                    <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
                    <!--For HTC devices-->
                    <action android:name="com.htc.intent.action.QUICKBOOT_POWERON"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>