<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonitoredActivity">

    <TextView
        android:id="@+id/textView1"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/Instructions1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/pair_layout"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/textView"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Admin Device:" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/deviceSpinner" android:layout_gravity="center"
            android:spinnerMode="dialog"/>


    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_below="@+id/pair_layout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Start Service"/>

    <Button
        android:id="@+id/stop"
        android:layout_below="@+id/start"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Stop Service"/>


